<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/fullActivity"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/relLayout"
        android:layout_width="match_parent"
        android:layout_height="350dp">

        <LinearLayout
            android:id="@+id/bgLL"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/point2"
            android:orientation="vertical">

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewTitle"
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="243dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Vehicle Tracking App"
                    android:textSize="30dp"
                    android:fontFamily="@font/baloo"
                    android:layout_gravity="center"
                    android:layout_marginTop="18dp"
                    android:layout_marginLeft="30dp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/forPhonePass"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginTop="35dp">

        <LinearLayout
            android:id="@+id/forPhoneNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/main_phone"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:hint="Phone Number"
                android:inputType="number"
                android:drawableStart="@drawable/phone_ic"
                android:drawablePadding="15dp"
                android:paddingLeft="20dp"
                android:fontFamily="@font/baloo"
                android:layout_gravity="center"
                android:background="@drawable/edit_text_bg"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/forPass"
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/main_password"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:drawableStart="@drawable/ic_lock"
                android:drawablePadding="15dp"
                android:paddingLeft="20dp"
                android:fontFamily="@font/baloo"
                android:layout_gravity="center"
                android:background="@drawable/edit_text_bg"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/forCheckbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkboxRM"
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:text="Remember Me"
                android:textStyle="bold"
                android:textSize="18dp"
                tools:ignore="TouchTargetSizeCheck" />


        </LinearLayout>

        <Button
            android:id="@+id/main_login_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_bg"
            android:fontFamily="@font/baloo"
            android:padding="20dp"
            android:text="Login"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:onClick="onGotoDashboard"/>

    </LinearLayout>

</LinearLayout>